/*
 * Nextflow configuration for BioLM SDK workflow
 */

// Default parameters
params {
  input  = ''        // optional, path to your FASTA
  token  = ''        // or use BIOLMAI_TOKEN env var
  outdir = 'results'
  demo   = false     // run in demo mode
}

// Process configuration
process {
  executor = 'local'
  cpus = 1
  memory = '2 GB'
}
